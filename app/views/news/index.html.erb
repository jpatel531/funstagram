<% if current_user.following_users.any? %>
<div class="container">

<% @activities.each do |activity| %>
	<div class="row news-story panel panel-default col-md-6">
		<div class="panel-body pull-left">
			<%= activity.owner.email %> 


			<%= activity.key.split(".").last %> 

			<% if activity.recipient_type %>

			<%= activity.recipient.title %>

			<% else %>

			<%= activity.trackable.title %>

			<% end %>
		</div>
	</div>

<% end %>

</div>
<% end %>