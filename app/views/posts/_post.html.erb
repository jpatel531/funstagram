<div class="col-sm-4">
	<div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= post.title %></h3>
    </div>
    <div class="panel-body">
    	<div class="image">
			<% if post.image.present? %>
				<%= image_tag post.image.url(:thumb), class: 'upload' %>
				<% end %>
			</div>
			<div class="post-info">
			<% post.tags.each do |tag| %>
				<%= link_to tag.name, tag_path(tag) %>
				<% end %>
			<%= link_to 'Map', post_maps_path(post), class: 'btn btn-success' unless post.address.blank? %>
			<%= link_to 'Buy', new_post_charge_path(post) %>
			<%= link_to "â™¥ #{post.likes.count}", post_likes_path(post), class: 'like-button', data: {'post-id' => post.id} %>
			</div>

			<% if post.user %>
			<p>Posted by <%= post.user.email%></p>
			<p><%= link_to "Follow #{post.user.email}", '#', class: 'follow-button', data: {'to-follow' => post.user.id} %></p>
			<% end %>
		</div>
	</div>
</div>